/* pages/BestChoice/BestChoice.wxss */
.online-switch{
    font-size: 20px;
    text-align: center;
}

.best-list{
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: center;
    align-items: center;
    align-content: center;
}

.building{
    flex-basis: 30%;
    margin: 5px;
}

.normal{
    background: rgb(0, 153, 255);
}
.epic{
    background: rgb(167, 0, 201);
}
.legend{
    background: rgb(255, 153, 0);
}

.building .text{
    color: white;
    font-size: 14px;
}

.building::after{
    border: 0px;
}

@keyframes fade-in {  
    0% {opacity: 0;}
    100% {opacity: 1;}
}  
@keyframes fade-out {  
    0% {opacity: 1;}
    100% {opacity: 0;}
}  

.detail{
    position: absolute;
    bottom: 0;
    width: 100%;
    height: 61%;
    background: white;
    z-index: 9999;
    animation: fade-in;
    animation-duration: 500ms;
    animation-timing-function: ease;
}

.detail-background{
    position: absolute;
    bottom:0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.404);
    z-index: 9998;
    animation: fade-in;
    animation-duration: 500ms;
    animation-timing-function: ease;
}

.detail .ric{
    margin: 2px;
    padding: 3px;
    font-size: 12px;
}

.detail .desc{
    margin: 2px;
    padding: 3px;
    color: lightgray;
    font-size: 12px;
}