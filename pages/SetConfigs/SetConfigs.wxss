.policy-container{
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: center;
}

.policy-name{
    margin: 10px;
    width: 50%;
    text-align: center;
}

.policy-slider{
    width: 50%;
}

.cinput{
    border: lightgray;
    border-style: solid;
    border-width: 1px;
    margin:0.1em;
    border-radius: 10px;
    padding-left: 0.1em;
    padding-right: 0.1em;
}

.buff_for_building{
    margin:0.1em;
    background-color: lightgray;
}

.buff_for_building#id_0{
    border-style:solid;
}
.buff_for_building#id_1{
    border-style:solid;
}
.buff_for_building#id_2{
    border-style:solid;
}

.cpicker{
    margin-top: 0.5em;
    margin-bottom: 0.5em;
}

.pick-selected{

}

.buildings_setting{
    margin:0.1em;
    border: 1px solid;
    border-radius: 5px;
}

.buildings_setting#industry{
    border-color: blue;
}
.buildings_setting#business{
    border-color: green;
}
.buildings_setting#residence{
    border-color: red
}

.buildings_setting .building{
    display: flex;
    flex-direction: column;
}

.building .starsetting{
    flex-direction: row;
}

.starsetting .startext{
    width: 20%;
    text-align: center;
    align-self: center;
}
.starsetting .starslider{
    width: 90%;
}

.building .levelsetting{
    flex-direction: row;
}

.levelsetting .text{
    width: 60%;
    align-self: center;
}