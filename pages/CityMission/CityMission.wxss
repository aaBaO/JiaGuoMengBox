/* 搜索框 */
.search-bar{
  width: 100%;
  position: fixed;
  z-index: 9999;
  background: white;
}

.mission-list{
  position: relative;
  padding-top: 1em; 
}

.mission-item{
  margin: 10px;
  border: 1px;
  border-radius: 5px;
  border-style: solid;
}

.mission-name{
  font-size: 24px;
  font-weight: bold;
}

.mission-buff-item{
  word-wrap: normal;
}